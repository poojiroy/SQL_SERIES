-- Create Database
CREATE DATABASE user_management;

-- \c user_management
-- Create table
CREATE TABLE user_info (
    id INT,
    token uuid DEFAULT gen_random_uuid(),
    name VARCHAR(100),
    role TEXT,
    salary NUMERIC(10,2),
    entry_time TIME DEFAULT CURRENT_TIME,
    entry_date DATE DEFAULT CURRENT_DATE,
    logout_timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- Insert rows
INSERT INTO user_info(id, name, role, salary) VALUES
(1, 'Poojitha', 'Productops', 33800.35),
(2, 'Sowmya', 'Engineer', 30000.44);

-- View table
SELECT id, name, entry_time, entry_date, logout_timestamp FROM user_info;

-- Update role
UPDATE user_info SET role='Data Engineer' WHERE name='Poojitha';
SELECT name, role FROM user_info;

-- Delete a row
DELETE FROM user_info WHERE id=2;

-- View table after delete
SELECT * FROM user_info;
