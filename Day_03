create type status as enum ('shipping', 'on_delivery', 'delivered');

create table products
(
product_name varchar(200),
summary text, 
colors text[],
brand varchar(40),
price numeric(10,2),
order_id uuid default gen_random_uuid(),
delivery_status status default 'shipping',
customer_info jsonb
);

