select * from products
where brand in('puma', 'bata')
order by price desc
limit 3 ;

select * from products
where brand in('puma', 'bata')
order by price desc
limit 3 
offset 1;


select brand from products where summary like 'Electronic%';


select brand from products where brand in('puma', 'bata') and price between 500 and 1000;



